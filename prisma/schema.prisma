generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  username String   @unique
  name     String
  password String
  role     UserRole @default(USER)
}

enum UserRole {
  USER
  ADMIN
  GUEST
}

